<html>
  <head>
    <title>Counselors Request</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <!-- include nav bar -->
    

    <!-- admin section -->
    <div class="container-fluid Main_Body">
      <div class="container-fluid Main_Body">
        <div class="row">
          <!-- side bar -->
          <div class="col-1 Slide_Bar">
            <ul class="nav flex-column nav-pills nav-fill">
              <li class="nav-item Nav_Pad">
                <a
                  class="nav-link "aria-current="page"href="Counselor_Dashboard">Dashboard</a
                >
              </li>
              <li class="nav-item Nav_Pad">
                <a class="nav-link" href="Counselor_Session">Session History</a
                >
              </li>
              <li class="nav-item Nav_Pad">
                <a class="nav-link" href="Counselor_Profile">Profile</a>
              </li>
              <li class="nav-item Nav_Pad">
                <a class="nav-link active" href="Counselor_Customer">Requests</a>
              </li>
            </ul>
          </div>

          <div class="col-1"></div>
          <!-- body -->

          <div class="col-9 Main_Data">
            <div class="card-deck">
                <!-- add for loop here  -->
                <%booking.forEach(item=>{%>
                   
                <div class="card">
                    <div class="card-body">
                      
                        <h5 class="card-title">Client Details</h5>
                        <h5 class="card-title">Name:<%=item.user_name%> </h5>
                        <h5 class="card-title">Email:<%=item.user_email%></h5>
                        <h5 class="card-title">Date:<%=item.date%></h5>
                        <h5 class="card-title">Time:<%=item.time%></h5>
                        <!-- <p class="card-text">Counselor Specilization</p> -->
                        <!-- Button trigger modal -->
                        <form action="/Counselor_Customer_Accept"  method="post">
                        <input  value="<%=item.id%>"  name="id" type="hidden">
                        <input  value="<%=item.user_email%>"  name="email" type="hidden">
                        <input  value="<%=item.counselor_email%>"  name="cemail" type="hidden">
                        <button type="submit" class="btn btn-primary">
                            Accept
                        </button>
                        </form>
                        <form action="/Counselor_Customer_Decline"  method="post">
                          <input  value="<%=item.id%>"  name="id" type="hidden">
                          <input  value="<%=item.user_email%>"  name="email" type="hidden">
                          <input  value="<%=item.counselor_email%>"  name="cemail" type="hidden">
                        <button type="submit" class="btn btn-primary" 
                            >
                            Decline
                        </button>
                      </form>
                      

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">
                                            Accept
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal"
                                            aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/action_page.php">
                                            <label for="birthdaytime">Book apointment :</label>
                                            <input type="datetime-local" id="birthdaytime" name="birthdaytime">
                                            
                                            <button type="submit" class="btn btn-primary">
                                                Save changes
                                            </button>
                                          </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                            Close
                                        </button>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                <!-- end for loop here -->
                <%})%>
            </div>
        </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
