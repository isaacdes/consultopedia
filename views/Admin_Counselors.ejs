<html>
    <head>
        <title>Admin Dashboard</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="css/style.css">
    </head>
    <body>
        <!-- include nav bar -->
        

        <!-- admin section -->
        <div class="container-fluid Main_Body">
          <div class="container-fluid">
            <div class="row">
              <!-- side bar -->
              <div class="col-1 Slide_Bar">

                <ul class="nav flex-column nav-pills nav-fill">
                  <li class="nav-item Nav_Pad">
                    <a class="nav-link" href="Admin_Dashboard">Dashboard</a>
                  </li>
                  <li class="nav-item Nav_Pad">
                    <a class="nav-link "  href="Admin_Session">Session History</a>
                  </li>
                  <li class="nav-item Nav_Pad">
                    <a class="nav-link " aria-current="page" href="Admin_Customers">Customers</a>
                  </li>
                  <li class="nav-item Nav_Pad">
                    <a class="nav-link active" href="Admin_Counselorls">Counselors</a>
                  </li>
                  
                </ul>
              </div>

              <div class="col-1 "></div>
              <!-- body -->
              <div class="col-10 col-sm Main_Data">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Name</th>
                      <th scope="col">Email</th>
                      <th scope="col">Address</th>
                      <th scope="col">Country</th>
                      <th scope="col">Aadharnum</th>
                      <th scope="col">phonenumber</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%let i=0%>
                     <%user.forEach(item=>{%>
                      <%if(item.role==='counselor'||item.role==='Counselor'){%>
                            <tr ><form action="/Admin_Customers" method="post">
                              <%i=i+1%>
                              <th scope="row"><input name="id" value="<%=item._id%>" type="hidden" readonly><%=i%></th>
                              <td><input name="name" value="<%= item.name %>"  readonly></td>
                              <td><input name="email" value="<%=item.email%>"  readonly></td>
                              <td><input name="address" value="<%=item.address%>"  readonly></td>
                              <td><input name="country" value="<%=item.country%>"  readonly></td>
                              <td><input name="aadhar" value="<%=item.aadharNum%>" readonly></td>
                              <td><input name="phone" value="<%=item.phone%>"  readonly></td>
                              <!-- <td><input class="btn btn-primary btn-sm btnCenter"  type="submit" value="update" required/></td> -->
                              
                            </form>
                            <form action="/deletecounselors" method="post">
                            <input name="id" value="<%=item._id%>" type="hidden" readonly>
                            <td><input class="btn btn-primary btn-sm btnCenter"  type="submit" value="delete" required/></td>
                            </form> 
                            </tr>
                     <%}})%> 
                     
                  </tbody>
                </table>
              </div>
              
            </div>
          </div>
        </div>
        

      
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>